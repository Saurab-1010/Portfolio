@model Contact
@{
    ViewData["Title"] = "Home Page";
}
@{

}

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div class="container">

        <div class="section-title">
          <h2>Contact</h2>
          <p>Get in touch with me.</p>
        </div>

        <div class="row" data-aos="fade-in">

          <div class="col-lg-5 d-flex align-items-stretch">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>Nepal, Bhaktapur</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>Saurab.shrestha1010@gmail.com</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>+977 9843199977</p>
              </div>
              <iframe
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7066.639975872377!2d85.36995653488769!3d27.676503300000014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39eb1a13269174b9%3A0x8b9583c158c7f911!2sGatthaghar%2C%20Madhyapur%20Thimi%2044600!5e0!3m2!1sen!2snp!4v1662454297537!5m2!1sen!2snp"
						frameborder="0" style="border:0; width:100%; height:290px;" allowfullscreen="" loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

          </div>

          <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch">
            <form asp-action="Create" id="ContactSubmit" autocomplete="off" class="php-email-form">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="row">
                <div class="form-group col-md-6">
                 <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" id="name" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                  <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" required/>
                <span asp-validation-for="Number" class="text-danger"></span>
                </div>
              </div>
              <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type = "email" asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input type = "Country" asp-for="Country" class="form-control" required/>
                <span asp-validation-for="Country" class="text-danger"></span>
              </div>
              <div class="form-group">
               <label asp-for="Message" class="control-label"></label>
             @*   <input asp-for="Message" class="form-control" required/>*@
                <textarea class="form-control" name="message" rows="10" required></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
              </div>
             @* <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>*@
              <br />
              <div class="text-center"><button type="submit">Send Message</button></div>
              
             @* <div class="form-group">
                <input type="submit" id="SubmitButton" value="Create" class="btn btn-primary" />
            </div>*@
            </form>
          </div>

        </div>

      </div>

    </section><!-- End Contact Section -->
      <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

     <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="assets/vendor/aos/aos.js"></script>
     <script type="text/javascript">

    $("SubmitButton").click(function(){
        debugger;
        var form = $("#ContactSubmit").serialize();
        $.ajax({
            url: "@Url.Action("Create", "Contact")",
            type: "POST",
            dataType: 'json',
            success: function(data){
                $.notify('MEssage Sent Successfully', {globalPosition: 'top center', className: 'success'});
            },
            error: function(){
                alert("Error");
            }
        })
    })



</script>